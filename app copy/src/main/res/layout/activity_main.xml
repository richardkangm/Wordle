<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnReset"
        android:layout_width="92dp"
        android:layout_height="57dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:background="#FF0000"
        android:text="@string/reset"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/etUserGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toEndOf="@+id/etUserGuess"
        app:layout_constraintTop_toTopOf="@+id/etUserGuess"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etUserGuess"
        android:layout_width="270dp"
        android:layout_height="57dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="@string/enter_4_letter_guess_here"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="92dp"
        android:layout_height="57dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:text="@string/guess"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/etUserGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toEndOf="@+id/etUserGuess"
        app:layout_constraintTop_toTopOf="@+id/etUserGuess"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvWordToGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/etUserGuess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserGuess3Check"
        app:layout_constraintVertical_bias="1.0"
        tools:text="HIDDEN WORD"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/tvGuess1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:text="@string/guess_1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserGuess1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGuess1Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="@string/guess_1_check"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/tvGuess1"
        app:layout_constraintTop_toBottomOf="@+id/tvGuess1" />

    <TextView
        android:id="@+id/tvGuess2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/guess_2"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/tvGuess1Check"
        app:layout_constraintTop_toBottomOf="@+id/tvGuess1Check" />

    <TextView
        android:id="@+id/tvUserGuess2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tvGuess1CheckResults"
        app:layout_constraintTop_toBottomOf="@+id/tvGuess1CheckResults" />

    <TextView
        android:id="@+id/tvGuess1CheckResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tvUserGuess1"
        app:layout_constraintTop_toBottomOf="@+id/tvUserGuess1" />

    <TextView
        android:id="@+id/tvGuess3CheckResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tvUserGuess3"
        app:layout_constraintTop_toBottomOf="@+id/tvUserGuess3" />

    <TextView
        android:id="@+id/tvGuess2CheckResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tvUserGuess2"
        app:layout_constraintTop_toBottomOf="@+id/tvUserGuess2" />

    <TextView
        android:id="@+id/tvUserGuess3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tvGuess2CheckResults"
        app:layout_constraintTop_toBottomOf="@+id/tvGuess2CheckResults" />

    <TextView
        android:id="@+id/tvGuess2Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/guess_2_check"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/tvGuess2"
        app:layout_constraintTop_toBottomOf="@+id/tvGuess2" />

    <TextView
        android:id="@+id/tvGuess3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/guess_3"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/tvGuess2Check"
        app:layout_constraintTop_toBottomOf="@+id/tvGuess2Check" />

    <TextView
        android:id="@+id/tvUserGuess3Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/guess_3_check"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/tvGuess3"
        app:layout_constraintTop_toBottomOf="@+id/tvGuess3" />

</androidx.constraintlayout.widget.ConstraintLayout>
